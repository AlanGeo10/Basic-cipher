import random
import numpy as np
import matplotlib.pyplot as plt

num_iterations = 10000 # number of random numbers to generate
numbers = []

for i in range(num_iterations):
    numbers.append(random.randint(1, 10))

# calculate the mean
mean = np.mean(numbers)
print("Mean:", mean)

# calculate the standard deviation
std_dev = np.std(numbers)
print("Standard deviation:", std_dev)

# plot the distribution --- still not showing pattern
plt.scatter(range(num_iterations), numbers)
plt.xlabel("Iteration")
plt.ylabel("Random Number")
plt.title("Dot plot of iteration to the corresponding random number")
plt.show()
